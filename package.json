{
  "name": "guessemon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "lint-staged",
    "preview": "vite preview",
    "fetch-pokemon": "tsx src/scripts/fetch-pokemon-data.ts",
    "fetch-pokemon:list": "tsx src/scripts/fetch-pokemon-data.ts list",
    "fetch-pokemon:pokemon": "tsx src/scripts/fetch-pokemon-data.ts pokemon",
    "fetch-pokemon:images": "tsx src/scripts/fetch-pokemon-data.ts images",
    "fetch-pokemon:images:all": "tsx src/scripts/fetch-pokemon-data.ts images official-artwork front-default back-default front-female back-female dream-world home-default",
    "fetch-pokemon:images:sprites": "tsx src/scripts/fetch-pokemon-data.ts images front-default back-default front-female back-female",
    "fetch-pokemon:images:artwork": "tsx src/scripts/fetch-pokemon-data.ts images official-artwork dream-world",
    "fetch-pokemon:lists": "tsx src/scripts/fetch-pokemon-data.ts lists",
    "fetch-pokemon:associated": "tsx src/scripts/fetch-pokemon-data.ts associated",
    "fetch-pokemon:stats": "tsx src/scripts/fetch-pokemon-data.ts stats",
    "pokemon-example": "tsx src/scripts/example-usage.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-dom": "^1.50.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-react-x": "^1.50.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
